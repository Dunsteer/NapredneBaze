{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build",
    "strict": false,
    "noImplicitAny": false,
    "declaration": false,
    "moduleResolution": "node",
    "types": [
      "./types",
      "node"
    ],
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "./src/",
    "./types"
  ],
  "exclude": [
    "node_modules",
    ".logs",
    "public"
  ]
}